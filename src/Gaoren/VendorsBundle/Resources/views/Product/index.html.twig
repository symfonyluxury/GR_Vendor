{% extends 'GaorenVendorsBundle::layout.html.twig' %}
{% block title %}产品列表{% endblock %}
{% block content %}

<div class="right-container">
    <div class="bubble">
        <h1 class="page-header">产品列表</h1>

        <table class="records_list table   table-striped">
            <thead>
                <tr>
                    <th>{{ pagination.sortable('序号','p.id')|raw }}</th>
                    <th>{{ pagination.sortable('名称','p.name')|raw }}</th>
                    <th>{{ pagination.sortable('价格','p.price')|raw }}</th>
                    <th>{{ pagination.sortable('描述','p.description')|raw }}</th>
                    <th>{{ pagination.sortable('创建于','p.createdAt')|raw }}</th>
                    <th>{{ pagination.sortable('更新于','p.updatedAt')|raw }}</th>
                    <th><a>动作</a></th>
                </tr>
            </thead>
            <tbody>
            {% for entity in pagination %}
                <tr>
                    <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.price }}</td>
                    <td>{{ entity.description }}</td>
                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <a class="btn btn-mini" href="{{ path('product_show', { 'id': entity.id }) }}">
                            <i class="icon-eye-open"></i>
                            {{ 'show'|trans }}
                        </a>
                        <a class="btn btn-mini" href="{{ path('product_edit', { 'id': entity.id }) }}">
                            <i class="icon-pencil"></i>
                            {{ 'edit'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="row">
            {{ pagination.render()|raw }}
        </div>

        <a class="btn btn-large btn-primary" href="{{ path('product_new') }}">
            <i class="icon-plus icon-white"></i>
            {{ 'create a new entry'|trans }}
        </a>
    </div>
</div>
{% endblock %}